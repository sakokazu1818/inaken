<p id="notice"><%= notice %></p>

<h1 class="container-fluid text-center" >顧客情報一覧</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>性別</th>
      <th>生年月日</th>
      <th>電話番号</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.sex %></td>
        <td><%= customer.date_of_birth %></td>
        <td><%= customer.tel %></td>
        <td>
          <div class="container-fluid">
            <div class="row pull-right">
              <%= link_to 'Show', customer, class: 'btn btn-info col-ms-4' %>
              <%= link_to 'Edit', edit_customer_path(customer), class: 'btn btn-warning col-ms-4' %>
              <%= link_to 'Destroy', customer, class: 'btn btn-danger col-ms-4', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="container-fluid">
	<div class="row pull-left">
		<div class="col-xs-2"></div>
		<div class="col-xs-10">
      <%= link_to '新規登録', new_customer_path, class: 'btn btn-success' %>
    </div>
	</div>
</div>
